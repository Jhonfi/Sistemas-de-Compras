<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione seus itens de compra:"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <CheckBox
        android:id="@+id/checkBoxArroz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arroz 1 Kg (R$ 4,00)"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:buttonTint="#1DB954"
        android:paddingVertical="8dp"/>

    <CheckBox
        android:id="@+id/checkBoxLeite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leite longa vida (R$ 5,00)"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:buttonTint="#1DB954"
        android:paddingVertical="8dp"/>

    <CheckBox
        android:id="@+id/checkBoxCarne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carne Friboi (R$ 49,00)"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:buttonTint="#1DB954"
        android:paddingVertical="8dp"/>

    <CheckBox
        android:id="@+id/checkBoxFeijao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FeijÃ£o carioquinha 1 Kg (R$ 9,00)"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:buttonTint="#1DB954"
        android:paddingVertical="8dp"/>

    <CheckBox
        android:id="@+id/checkBoxRefri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refrigerante coca-cola 2 litros (R$8,00)"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:buttonTint="#1DB954"
        android:paddingVertical="8dp"/>

    <Button
        android:id="@+id/buttonCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular Total"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#1DB954"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"/>

    <TextView
        android:id="@+id/textViewTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: R$ 0,00"
        android:textSize="24sp"
        android:textColor="#1DB954"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>